{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "dist"
    ]
}